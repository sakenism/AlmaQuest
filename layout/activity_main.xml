<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="#ffffff"
    android:gravity="center"
    tools:context="com.example.sunny.alma.MainActivity"
    >

    <LinearLayout
        android:id="@+id/menu_general"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonQuests"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@color/button_main"
            android:text="Quests"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/text_main"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonAchive"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/button_main"
            android:text="Achivements"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/text_main"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonAlbums"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:background="@color/button_main"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/text_main"
            android:text="Albums" />



    </LinearLayout>


</LinearLayout>

