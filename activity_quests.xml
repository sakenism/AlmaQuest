<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saken.vst.Quests">

    <TextView
        android:id="@+id/quests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quests"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"  />

    <Button
        android:id="@+id/buttonQuestsShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping Quest"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/buttonQuestsBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transportation Quest"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonQuestsShop"
        />

    <Button
        android:id="@+id/buttonQuestsHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historical Quest"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonQuestsBus"
        />
</RelativeLayout>